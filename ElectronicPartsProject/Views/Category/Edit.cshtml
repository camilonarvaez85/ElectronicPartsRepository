@model ElectronicPartsProject.Models.DBElectronicPartsModel.category

@{
    ViewBag.Title = "Category - Edit";
    var filters = ViewBag.CurrentFilters as ElectronicPartsProject.Models.CategoryFilterVM ?? new ElectronicPartsProject.Models.CategoryFilterVM();
}

<br />
@using (Html.BeginForm())
{
    //@Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>category</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.category_id)

        <div class="form-group">
            @Html.LabelFor(model => model.category_name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.category_name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.category_name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.global_ref_des, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.global_ref_des, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.global_ref_des, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @*@Html.ActionLink("Back to List", "Index", "Category")*@
    @Html.ActionLink("Back to List", "Index", "Category", new
            {
                filters.CategoryName,
                filters.GlobalRefDes,
                page = ViewBag.CurrentPage
            }, new { @class = "btn btn-default" })
</div>
